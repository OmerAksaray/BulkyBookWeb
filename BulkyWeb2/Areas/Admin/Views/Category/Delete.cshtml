@model Category
<form method="POST">

    <input asp-for="CategoryId" />
    <div class="row ">
        <div class="mb-3 col-8 ">
            <label asp-for="Name" class="form-label text-primary"></label>
            <input asp-for="Name" class="form-control border border-primary">
        </div>

    </div>
    <div class="row ">
        <div class="mb-3 col-8">
            <label asp-for="DisplayOrder" class="form-label"></label>
            <input asp-for="DisplayOrder" class="form-control  border border-primary">
        </div>
    </div>
    <div class="row ">
        <div class="col-6 border border-secondary">
            <button type="submit" class="btn btn-danger form-control">Delete</button>
        </div>
        <div class="col-6 border border-primary">
            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary  form-control">Back To List</a>
        </div>
    </div>


</form>
