@model BulkyBook.Models.ViewModels.ProductVM
<div class="card shadow border-0 mt-4 container " style="max-height:auto;">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2 ">Create Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body"> 
<form method="POST" class="row">

    <div asp-validation-summary="All"></div>
    <div class=" form-floating">
        <div class="mb-2 col-8 ">
            <label asp-for="Product.Title" class="form-label text-primary"></label>
                    <input asp-for="Product.Title" class="form-control border border-primary">
                    <span asp-validation-for="Product.Title" class="text-danger"></span>
        </div>

    </div>
            <div class="form-floating ">
        <div class="mb-2 col-8">
                    <label asp-for="Product.Description" class="form-label"></label>
                    <input asp-for="Product.Description" class="form-control  border border-primary">
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>
    </div>
            <div class="form-floating ">
        <div class="mb-2 col-8">
                    <label asp-for="Product.Author" class="form-label"></label>
                    <input asp-for="Product.Author" class="form-control  border border-primary">
                    <span asp-validation-for="Product.Author" class="text-danger"></span>
        </div>
    </div>
            <div class="form-floating ">
        <div class="mb-2 col-8">
                    <label asp-for="Product.ListPrice" class="form-label"></label>
                    <input asp-for="Product.ListPrice" class="form-control  border border-primary">
                    <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
        </div>
    </div>
            <div class="form-floating ">
        <div class="mb-2 col-8">
                    <label asp-for="Product.Price" class="form-label"></label>
                    <input asp-for="Product.Price" class="form-control  border border-primary">
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>
    </div>
    <div class="row ">
        <div class="mb-2 col-8">
                    <label asp-for="Product.Price50" class="form-label"></label>
                    <input asp-for="Product.Price50" class="form-control  border border-primary">
                    <span asp-validation-for="Product.Price50" class="text-danger"></span>
        </div>
    </div>
    <div class="row ">
        <div class="mb-2 col-8">
                    <label asp-for="Product.Price100" class="form-label"></label>
                    <input asp-for="Product.Price100" class="form-control  border border-primary">
                    <span asp-validation-for="Product.Price100" class="text-danger"></span>
        </div>
    </div>
            <div class="row ">
                <div class="mb-2 col-8">
                    <label asp-for="Product.ImageUrl" class="form-label"></label>
                    <input asp-for="Product.ImageUrl" class="form-control  border border-primary">
                    <span asp-validation-for="Product.ImageUrl" class="text-danger"></span>
                </div>
            </div>
            <div class="row ">
                <div class="mb-2 col-8">
                    <label asp-for="Product.ISBN" class="form-label"></label>
                    <input asp-for="Product.ISBN" class="form-control  border border-primary">
                    <span asp-validation-for="Product.ISBN" class="text-danger"></span>
                </div>
            </div>
            <div class="row ">
                <div class="mb-2 col-8">
                    <label asp-for="Product.CatId" class="form-label"></label>
                    <select asp-for="Product.CatId" class="form-control  border border-primary" asp-items="@Model.CategoryList">
                        <option disabled selected>--Selected Category--</option>

                    </select>
                    <span asp-validation-for="Product.Price100" class="text-danger"></span>
                </div>
            </div>
           
        <div class="row">
            <div class="col-6 border border-secondary">
                <button type="submit" class="btn btn-success form-control">Create</button>
            </div>
            <div class="col-6 border border-primary">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary  form-control">Back To List</a>
            </div>
    </div>

    
</form>
    </div>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}